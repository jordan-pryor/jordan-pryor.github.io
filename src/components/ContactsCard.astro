---
import Card from "./Card/index.astro";
import { LINKS } from "../lib/constants";
---

<style>
  .contact-card {
    height: 415px;
    width: 369px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    font-family: 'Fira Code', monospace;
    color: #f5f5f5; /* Lightened base text color for better contrast */
  }

  .card-header {
    color: #9b59b6; /* Soft violet for header text */
    font-size: 1rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
  }

  .blinking-cursor {
    animation: blink 1s step-start infinite;
  }

  @keyframes blink {
    50% { opacity: 0; }
  }

  .label {
    color: #00fa9f; /* Fresh green for labels */
    font-size: 0.75rem;
    text-transform: uppercase;
    margin-bottom: 0.25rem;
  }

  .info {
    color: #dcdcdc; /* Lighter grey for information text */
    font-size: 0.875rem;
  }

  .social-link {
    color: #f5f5f5; /* Base text color for links */
    text-decoration: none;
  }

  .social-link:hover {
    color: #9b59b6; /* Violet for link hover */
  }

  .divider {
    border-top: 1px solid #3a3a49; /* Darker border for contrast */
    margin: 0.75rem 0;
  }

  .section {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }
</style>

<Card colSpan="md:col-span-1" rowSpan="md:row-span-4">
  <div class="contact-card">
    <header>
      <h1 class="card-header">&gt; Let's start working together<span class="blinking-cursor">_</span></h1>
    </header>

    <div>
      <div class="section">
        <p class="label">Contact Details</p>
        <p class="info">jordanpryor.personal@outlook.com</p>
        <p class="info">Nashville, TN</p>
      </div>

      <div class="divider"></div>

      <div class="section">
        <p class="label">Socials</p>
        <ul class="section">
          <li><a class="social-link" href={LINKS.linkedin} target="_blank">LinkedIn</a></li>
          <li><a class="social-link" href={LINKS.github} target="_blank">GitHub</a></li>
          <li><a class="social-link" href={LINKS.discord} target="_blank">Discord</a></li>
        </ul>
      </div>
    </div>
  </div>
</Card>

