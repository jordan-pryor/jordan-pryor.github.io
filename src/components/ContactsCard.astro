---
import Card from "./Card/index.astro";
import { LINKS } from "../lib/constants";
---
<style>
  .contact-card {
    height: 415px;
    width: 369px;
    box-sizing: border-box;
    padding: 1rem;
    font-family: 'Fira Code', monospace;
    color: #e5e5e5;

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: start;
    gap: 1.25rem;
  }

  .card-header {
    color: #bd5eff;
    font-size: 1rem;
    font-weight: bold;
    align-self: flex-start; /* Keep top-left bias */
    margin-top: 0.25rem;
  }

  .section {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  address, .socials {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 0.25rem;
  }

  .label {
    color: #50fa7b;
    font-size: 0.75rem;
    text-transform: uppercase;
    margin-bottom: 0.25rem;
  }

  .info {
    color: #e5e5e5;
    font-size: 0.875rem;
  }

  .social-link {
    color: #e5e5e5;
    text-decoration: none;
  }

  .social-link:hover {
    color: #bd5eff;
  }

  .divider {
    border-top: 1px solid #2e2e3a;
    width: 100%;
  }

  .blinking-cursor {
    animation: blink 1s step-start infinite;
  }

  @keyframes blink {
    50% {
      opacity: 0;
    }
  }
</style>

<Card colSpan="md:col-span-1" rowSpan="md:row-span-4">
  <div class="contact-card">
    <header class="card-header">
      &gt; Let's start working together<span class="blinking-cursor">_</span>
    </header>

    <div class="divider" />

    <div class="section">
      <address class="not-italic">
        <p class="label">Contact Details</p>
        <p class="info">jordanpryor.personal@outlook.com</p>
        <p class="info">Nashville, TN</p>
      </address>
    </div>

    <div class="divider" />

    <div class="section socials">
      <p class="label">Socials</p>
      <ul class="flex flex-col gap-1">
        <li><a class="social-link" href={LINKS.linkedin} target="_blank">LinkedIn</a></li>
        <li><a class="social-link" href={LINKS.github} target="_blank">GitHub</a></li>
        <li><a class="social-link" href={LINKS.discord} target="_blank">Discord</a></li>
      </ul>
    </div>
  </div>
</Card>
