---
import Card from "./Card/index.astro";
import { LINKS } from "../lib/constants";
---

<style>
  .contact-header {
    color: #cad3f5; /* Text */
  }

  .contact-details,
  .socials-title {
    color: #8087a2; /* Overlay1 */
  }

  .contact-info,
  .social-links a {
    color: #f4dbd6; /* Rosewater */
  }

  .social-links a:hover {
    color: #8aadf4; /* Blue */
  }
</style>

<Card colSpan="md:col-span-1" rowSpan="md:row-span-4">
  <div class="h-full">
    <header class="flex items-center">
      <h1 class="contact-header text-xl font-bold">
        Let's start working together!
      </h1>
    </header>
    <address class="flex flex-col mt-4">
      <h2 class="contact-details">Contact Details</h2>
      <p class="contact-info">jordanpryor.personal@outlook.com</p>
      <p class="contact-info">Nashville, TN</p>
    </address>
    <div class="flex flex-col mt-4 w-fit">
      <h2 class="socials-title">Socials</h2>
      <ul class="social-links">
        <li>
          <a href={LINKS.linkedin} target="_blank">Linkedin</a>
        </li>
        <li>
          <a href={LINKS.github} target="_blank">Github</a>
        </li>
        <li>
          <a href={LINKS.medium} target="_blank">Medium</a>
        </li>
        <li>
          <a href={LINKS.discord} target="_blank">Discord</a>
        </li>
      </ul>
    </div>
  </div>
</Card>
