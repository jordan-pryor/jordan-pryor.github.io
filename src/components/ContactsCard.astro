---
import Card from "./Card/index.astro";
import { LINKS } from "../lib/constants";
---
<style>
  .contact-header {
    color: #bd93f9; /* Soft purple */
  }

  .contact-details,
  .socials-title {
    color: #aaffcc; /* Green to match terminal accent */
  }

  .contact-info,
  .social-links a {
    color: #f8f8f2; /* Light text for readability */
    word-break: break-word;
    overflow-wrap: break-word;
  }

  .social-links a {
    transition: color 0.2s ease;
  }

  .social-links a:hover {
    color: #ff79c6; /* Terminal pink hover */
  }

  .contact-card {
    background-color: #1e1f29; /* Terminal dark background */
    border: 1px solid #44475a; /* Subtle border like a terminal frame */
    padding: 1rem;
    font-family: 'Fira Code', monospace; /* Terminal font */
  }

  .terminal-divider {
    border-top: 1px solid #44475a;
    margin: 0.75rem 0;
  }

  .social-links {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }
</style>

<Card colSpan="md:col-span-1" rowSpan="md:row-span-4">
  <div class="h-full flex flex-col contact-card">
    <header class="flex items-center">
      <h1 class="contact-header text-lg font-bold tracking-tight">
        &gt; Let's start working together<span class="blinking-cursor">_</span>
      </h1>
    </header>

    <div class="terminal-divider" />

    <address class="flex flex-col gap-1 not-italic">
      <h2 class="contact-details text-sm uppercase tracking-wide">Contact Details</h2>
      <p class="contact-info text-sm">jordanpryor.personal@outlook.com</p>
      <p class="contact-info text-sm">Nashville, TN</p>
    </address>

    <div class="terminal-divider" />

    <div class="flex flex-col w-fit">
      <h2 class="socials-title text-sm uppercase tracking-wide mb-1">Socials</h2>
      <ul class="social-links text-sm">
        <li><a href={LINKS.linkedin} target="_blank" aria-label="LinkedIn Profile">LinkedIn</a></li>
        <li><a href={LINKS.github} target="_blank" aria-label="GitHub Profile">GitHub</a></li>
        <li><a href={LINKS.discord} target="_blank" aria-label="Discord">Discord</a></li>
      </ul>
    </div>
  </div>
</Card>
