---
interface Props {
  title?: string;
  body?: string;
}

const { title, body } = Astro.props;
---

<>
  {title && <h2 class="text-xl font-bold m-0 z-20 text-[#cad3f5]">{title}</h2>} <!-- Text -->
  {body && <p class="m-0 font-light text-base text-[#b8c0e0]">{body}</p>} <!-- Subtext1 -->
  <slot />
</>
