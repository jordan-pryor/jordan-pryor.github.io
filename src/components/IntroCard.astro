---
import Card from "./Card/index.astro";
import Button from "./Button.astro";
import { LINKS } from "../lib/constants";
import { Icon } from 'astro-icon/components';
import Tooltip from "./Tooltip/index";
import { Image } from "astro:assets";
---

<style>
  .terminal-card {
    position: relative;
    background-color: #0d0d0d;
    border: 1px solid #b276f4;
    border-radius: 0.75rem;
    padding: 1rem;
    font-family: 'IBM Plex Mono', monospace;
    color: #f0f0f0;
    box-shadow: 0 0 18px rgba(178, 118, 244, 0.12);
    box-sizing: border-box;
    overflow: hidden;
  }

  .welcome-text {
    color: #b276f4;
    font-size: 0.75rem;
    margin: 0 0 0.25rem 0;
  }

  .intro-text {
    color: #f0f0f0;
    font-size: 1rem;
    line-height: 1.6;
    font-weight: 300;
    margin: 0;
  }

  .bold-text {
    color: #ff4eb8;
    font-weight: 600;
  }

  .button-icon {
    color: #ffffff;
    transition: color 0.2s ease;
  }

  .button:hover .button-icon {
    color: #ff4eb8;
  }

  .terminal-header {
    color: #b276f4;
    font-size: 0.75rem;
    margin-bottom: 0.5rem;
    display: block;
  }

  .intro-layout {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .intro-content {
    max-width: 600px;
    z-index: 2;
  }

  .button-group {
    display: flex;
    gap: 1rem;
  }

  .intro-logo-wrapper {
    position: absolute;
    bottom: 0;
    right: 0;
    width: 387px;
    height: 302px;
    opacity: 0.9;
    pointer-events: none;
    user-select: none;
  }

  .logo-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
    filter: drop-shadow(0 0 18px rgba(178, 118, 244, 0.5));
  }

  @media (max-width: 768px) {
    .intro-logo-wrapper {
      position: absolute;
      bottom: -20px; /* Adjust as needed to match how much the logo dips below the card */
      right: -20px;  /* Adjust to pull the logo slightly out to the right like in the screenshot */
      width: 387px;
      height: 302px;
      opacity: 0.9;
      pointer-events: none;
      user-select: none;
      z-index: 1; /* Ensures it doesn't overlap important UI */
    }
  }
</style>

<Card colSpan="md:col-span-3" rowSpan="md:row-span-4" class="terminal-card">
  <span class="terminal-header">&gt; Welcome.sh</span>
  <div class="intro-layout">
    <div class="intro-content">
      <div>
        <h6 class="welcome-text">welcome</h6>
        <p class="intro-text">
          Hello ðŸ‘‹, I'm <b class="bold-text">Jordan N. Pryor</b>, a Developer with expertise in game development, game engine creation, and software design. I specialize in crafting innovative solutions that deliver engaging and immersive experiences.
        </p>
      </div>
      <div class="button-group">
        <a href={LINKS.github} aria-label="GitHub" target="_blank">
          <Button><Icon name="ri:github-fill" class="h-6 button-icon" /><span class="sr-only">GitHub</span></Button>
        </a>
        <a href={LINKS.linkedin} aria-label="LinkedIn" target="_blank">
          <Button><Icon name="ri:linkedin-box-fill" class="h-6 button-icon" /><span class="sr-only">LinkedIn</span></Button>
        </a>
        <Tooltip client:visible>
          <Button aria-label="Easter Egg"><Icon name="ri:emotion-laugh-line" class="h-6 button-icon" /><span class="sr-only">Easter Egg</span></Button>
        </Tooltip>
      </div>
    </div>
  </div>

  <div class="intro-logo-wrapper">
    <Image
        src="/logo.png"
        alt="Jordan Pryor logo"
        width="387"
        height="302"
        class="logo-image"
    />
  </div>
</Card>
