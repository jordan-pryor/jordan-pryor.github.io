---
import Card from "./Card/index.astro";
import Button from "./Button.astro";
import { LINKS } from "../lib/constants";
import { Icon } from 'astro-icon/components';
import Tooltip from "./Tooltip/index";
import { Image } from "astro:assets";
---

<style>
  .terminal-card {
    background-color: #0d0d0d;
    border: 1px solid #b276f4;
    border-radius: 0.75rem;
    padding: 1rem;
    font-family: 'IBM Plex Mono', monospace;
    color: #f0f0f0;
    box-shadow: 0 0 18px rgba(178, 118, 244, 0.12);
    box-sizing: border-box;
    overflow: hidden;
  }

  .welcome-text {
    color: #b276f4;
    font-size: 0.75rem;
    margin: 0 0 0.25rem 0;
  }

  .intro-text {
    color: #f0f0f0;
    font-size: 1rem;
    line-height: 1.6;
    font-weight: 300;
    margin: 0;
  }

  .bold-text {
    color: #ff4eb8;
    font-weight: 600;
  }

  .button-icon {
    color: #ffffff;
    transition: color 0.2s ease;
  }

  .button:hover .button-icon {
    color: #ff4eb8;
  }

  .terminal-header {
    color: #b276f4;
    font-size: 0.75rem;
    margin-bottom: 0.5rem;
    display: block;
  }

  .intro-layout {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .intro-content {
    flex: 1;
    min-width: 240px;
    max-width: 600px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 1rem;
  }

  .intro-logo-wrapper {
    display: flex;
    justify-content: center;
    align-items: flex-end;
    flex: 0 0 auto;
    padding-left: 1rem;
  }

  .logo-image {
    width: 160px;
    height: auto;
    object-fit: contain;
    pointer-events: none;
    user-select: none;
    opacity: 0.9;
    filter: drop-shadow(0 0 12px rgba(178, 118, 244, 0.5));
  }

  .button-group {
    display: flex;
    gap: 1rem;
  }
</style>

<Card colSpan="md:col-span-3" rowSpan="md:row-span-4" class="terminal-card">
  <span class="terminal-header">&gt; Welcome.sh</span>
  <div class="intro-layout">
    <div class="intro-content">
      <div>
        <h6 class="welcome-text">welcome</h6>
        <p class="intro-text">
          Hello ðŸ‘‹, I'm <b class="bold-text">Jordan N. Pryor</b>, a Developer with expertise in game development, game engine creation, and software design. I specialize in crafting innovative solutions that deliver engaging and immersive experiences.
        </p>
      </div>
      <div class="button-group">
        <a href={LINKS.github} aria-label="GitHub" target="_blank">
          <Button><Icon name="ri:github-fill" class="h-6 button-icon" /><span class="sr-only">GitHub</span></Button>
        </a>
        <a href={LINKS.linkedin} aria-label="LinkedIn" target="_blank">
          <Button><Icon name="ri:linkedin-box-fill" class="h-6 button-icon" /><span class="sr-only">LinkedIn</span></Button>
        </a>
        <Tooltip client:visible>
          <Button aria-label="Easter Egg"><Icon name="ri:emotion-laugh-line" class="h-6 button-icon" /><span class="sr-only">Easter Egg</span></Button>
        </Tooltip>
      </div>
    </div>

    <div class="intro-logo-wrapper">
      <Image
          src="/logo.png"
          alt="Jordan Pryor logo"
          width="160"
          height="160"
          class="logo-image"
      />
    </div>
  </div>
</Card>
