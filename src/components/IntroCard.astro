---
import Card from "./Card/index.astro";
import Button from "./Button.astro";
import { LINKS } from "../lib/constants";
import { Icon } from 'astro-icon/components';
import Tooltip from "./Tooltip/index";
import { Image } from "astro:assets";
---

<style>
  .terminal-card {
    background-color: #0d0d0d; /* Jet black terminal background */
    border: 1px solid #b276f4; /* Neon violet border */
    border-radius: 0.75rem;
    padding: 1.25rem;
    font-family: 'IBM Plex Mono', monospace;
    color: #f0f0f0;
    box-shadow: 0 0 18px rgba(178, 118, 244, 0.12);
  }
  .card-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #c792ea; /* Match this to your other titles if different */
    font-family: 'IBM Plex Mono', monospace;
    margin-bottom: 0.5rem;
  }
  .welcome-text {
    color: #b276f4; /* Soft violet */
    font-size: 0.75rem;
    margin-bottom: 0.25rem;
  }
  .intro-text {
    color: #f0f0f0;
    font-size: 1.125rem;
    line-height: 1.6;
    font-weight: 300;
  }

  .bold-text {
    color: #ff4eb8; /* Bright pink highlight */
    font-weight: 600;
  }

  .button-icon {
    color: #ffffff;
    transition: color 0.2s ease;
  }

  .button:hover .button-icon {
    color: #ff4eb8; /* Neon pink on hover */
  }

  .terminal-header {
    color: #b276f4;
    font-size: 0.75rem;
    display: block;
    margin-bottom: 0.5rem;
  }
  .blinking-cursor {
    display: inline-block;
    width: 0.75ch;
    color: #aaffcc;
    animation: blink 1s step-start infinite;
  }
</style>

<Card colSpan="md:col-span-3" rowSpan="md:row-span-4" class="terminal-card">
  <h2 class="card-title">&gt; Intro<span class="blinking-cursor">_</span></h2>
  <div class="flex w-full h-full">
    <div class="flex flex-col justify-between md:max-h-[300px] gap-4">
      <div class="flex flex-col h-full">
        <h6 class="welcome-text m-0">welcome</h6>
        <p class="intro-text m-0">
          HelloðŸ‘‹, I'm <b class="bold-text">Jordan N. Pryor</b>, a Developer with expertise in game development, game engine creation, and software design. I specialize in crafting innovative solutions that deliver engaging and immersive experiences.
        </p>
      </div>
      <div class="flex gap-3">
        <a href={LINKS.github} aria-label="github profile" target="_blank">
          <Button aria-label="github profile">
            <Icon name="ri:github-fill" class="h-6 button-icon" />
            <span class="sr-only">GitHub Profile</span>
          </Button>
        </a>
        <a href={LINKS.linkedin} aria-label="linkedin profile" target="_blank">
          <Button aria-label="linkedin profile">
            <Icon name="ri:linkedin-box-fill" class="h-6 button-icon" />
            <span class="sr-only">Linkedin Profile</span>
          </Button>
        </a>
        <Tooltip client:visible>
          <Button aria-label="easter egg btn">
            <Icon name="ri:emotion-laugh-line" class="h-6 button-icon" />
            <span class="sr-only">Easter egg button</span>
          </Button>
        </Tooltip>
      </div>
    </div>

    <Image
        width="300"
        height="300"
        src="/logo.png"
        class="w-auto max-h-[300px] select-none absolute right-[-110px] bottom-[-20px] z-[-1] opacity-50 md:opacity-100 md:relative md:right-auto md:bottom-auto md:z-auto pointer-events-none"
        alt="memoji of jordan"
    />
  </div>
</Card>