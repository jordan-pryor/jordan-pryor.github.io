---
import Card from "./Card/index.astro";
import Button from "./Button.astro";
import { LINKS } from "../lib/constants";
import { Icon } from 'astro-icon/components';
import Tooltip from "./Tooltip/index";
import { Image } from "astro:assets";
---

<style>
  .terminal-card {
    background-color: #0b0b0f; /* Deep black-blue terminal tone */
    border: 1px solid #c084fc; /* Neon lavender */
    border-radius: 0.75rem;
    padding: 1.25rem;
    font-family: 'IBM Plex Mono', monospace;
    color: #f8f8f2; /* Softer white */
    box-shadow: 0 0 22px rgba(192, 132, 252, 0.15);
  }

  .card-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #dcb9ff; /* Muted pastel violet */
    font-family: 'IBM Plex Mono', monospace;
    margin-bottom: 0.5rem;
  }

  .welcome-text {
    color: #9f7aea; /* Lighter violet */
    font-size: 0.75rem;
    margin-bottom: 0.25rem;
  }

  .intro-text {
    color: #eeeeee; /* High contrast but not pure white */
    font-size: 1.125rem;
    line-height: 1.6;
    font-weight: 300;
  }

  .bold-text {
    color: #ff6ec7; /* Vibrant hot pink */
    font-weight: 600;
  }

  .button-icon {
    color: #e0e0e0;
    transition: color 0.2s ease;
  }

  .button:hover .button-icon {
    color: #ff6ec7; /* Matches bold-text for hover */
  }

  .terminal-header {
    color: #c084fc;
    font-size: 0.75rem;
    display: block;
    margin-bottom: 0.5rem;
  }

  .blinking-cursor {
    display: inline-block;
    width: 0.75ch;
    color: #7fffd4; /* Aqua glow */
    animation: blink 1s step-start infinite;
  }

  @keyframes blink {
    50% {
      opacity: 0;
    }
  }
</style>


<Card colSpan="md:col-span-3" rowSpan="md:row-span-4" class="terminal-card">
  <h2 class="card-title">&gt; Intro<span class="blinking-cursor">_</span></h2>
  <div class="flex w-full h-full">
    <div class="flex flex-col justify-between md:max-h-[300px] gap-4">
      <div class="flex flex-col h-full">
        <h6 class="welcome-text m-0">welcome</h6>
        <p class="intro-text m-0">
